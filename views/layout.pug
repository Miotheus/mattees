doctype html
html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
    link(rel='stylesheet', href='/stylesheets/style.css')

  body

    block head
      div#cabec(class="container")
        div#cabec(class="jumbotron")
            a(href='/catalog')
              img#headericon(src="https://i.imgur.com/kwAyutA.png")

    div(class='container-fluid')
      div(class='row')
        div(class='col-sm-2')
          block sidebar
            ul(class='sidebar-nav')
              li 
                a(href='/catalog') Home
              li 
                a(href='/catalog/shirts') Shirts
              li 
                a(href='/catalog/clients') Clients
              li 
                a(href='/catalog/purchases') Purchases
              li 
                a(href='/catalog/shirtinstances') Availability
              li 
                hr
              li 
                a(href='/catalog/client/create') Create new client
              li 
                a(href='/catalog/purchase/create') Create new purchase
              li 
                a(href='/catalog/shirt/create') Create new shirt
              li 
                a(href='/catalog/shirtinstance/create') Create new shirt instance (copy)
                
        div(class='col-sm-10')
          block content